@model IEnumerable<UniversityProject.Entities.Course>

<br />
<br />
<br />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}

<p>
    <a href="@Url.Action("Create", "Course")" class="btn btn-primary">Create New Course</a>
</p>
<br />
<br />

<!-- Page Title Starts Here -->
<div class="page-nav no-margin row">
    <div class="container">
        <div class="row">
            <h2>Courses</h2>
            <ul>
                <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                <li><i class="fas fa-angle-double-right"></i> Courses</li>
            </ul>
        </div>
    </div>
</div>
<!-- Page Title End -->
<!-- Popular Courses Starts Here -->
<div class="popular-courses pc2">
    <div class="container">
        <div class="row course-row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="course-card">
                        <img src="assets/images/courses/course-1.jpg" alt="">
                        <div class="course-details">
                            <h6>@item.Name</h6>
                            <ul>
                                <li><i class="fas fa-graduation-cap"></i> @item.Teacher.Name<span>@item.Cost</span></li>
                                <li><i class="far fa-calendar-plus"></i> @item.CreatedOn.ToString("yyyy/MM/dd hh:mm tt")</li>
                            </ul>
                            @if (User.IsInRole("STUDENT"))
                            {
                                <form action="@Url.Action("AddToMyCourse", "Course")" method="post">
                                    @Html.Hidden("courseId", item.Id)
                                    <button type="submit" class="btn btn-primary">Add To My Course</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
