@model UniversityProject.Entities.User

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Firstname
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Lastname
        </dd>
        <dt class="col-sm-2">
            Birthdate
        </dt>
        <dd class="col-sm-10">
            @Model.Birthdate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Is System Admin
        </dt>
        <dd class="col-sm-10">
            @Model.IssystemAdmin
        </dd>
        <dt class="col-sm-2">
            Profile Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProfileImage?.Url" alt="Profile Image" class="img-thumbnail" style="max-width: 150px;" />
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
