@model IEnumerable<UniversityProject.Entities.User>
<br />
<br />
<br />
<br />
<br />
<br />
@{
    ViewData["Title"] = "Users";
}


<div class="our-blog"> 
    <div class="container">

        <p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New User</a>
        </p>
        <br /> 
        <br />
        <table class="table table-bordered table-hover ">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birthdate</th>
                    <th>Created On</th>
                    <th>Is System Admin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Firstname</td>
                        <td>@item.Lastname</td>
                        <td>@item.Birthdate.ToShortDateString()</td>
                        <td>@item.CreatedOn.ToShortDateString()</td>
                        <td>@item.IssystemAdmin</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>