@model UniversityProject.Entities.User

<br />
<br />
<br />
<br />
<br />
@{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
}


<br />
<form asp-controller="Account" asp-action="Register" method="POST" role="form">
    <div class="our-blog">
        <div class="container">
            <div class="session-title row">
                <h2>Login</h2>
            </div>
            <div class="container">

                <div class="container">
                    <label for="Firstname" Firstname</label>
                    <div class="sec-2">
                        <ion-icon name="Firstname"></ion-icon>
                        <input asp-for="Firstname" type="text"  placeholder="Firstname" />
                    </div>
                </div>

                <div class="container">
                    <label for="Lastname" Firstname</label>
                    <div class="sec-2">
                        <ion-icon name="Lastname"></ion-icon>
                        <input asp-for="Lastname" type="text"  placeholder="Lastname" />
                    </div>
                </div>
                <div class="container">
                    <label for="Email" Firstname</label>
                    <div class="sec-2">
                        <ion-icon name="Email"></ion-icon>
                        <input asp-for="Email" type="email"  placeholder="Email" />
                    </div>
                </div>

                <div class="container">
                    <label for="Password" Firstname</label>
                    <div class="sec-2">
                        <ion-icon name="Password"></ion-icon>
                        <input asp-for="Password" type="password"placeholder="password" />
                    </div>
                </div>
                <div class="container">
                    <label for="UserName" Firstname</label>
                    <div class="sec-2">
                        <ion-icon name="UserName"></ion-icon>
                        <input asp-for="UserName" type="text" name="UserName" placeholder="UserName" />
                    </div>
                </div>

              








                <br />
                <button class="container" type="submit"> Login </button>
                <br />
                <div class="container">
                    <span>Signup</span>
                    <br />

                    <span>Forgot Password?</span>
                </div>
            </div>
        </div>

    </div>
</form>


